    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.15.1",
    "typescript": "^3.3.3333",
    "uglify-js": "^3.4.9",
    "uglifyjs-folder": "^1.5.1"
  }
