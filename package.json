  "author": "Peter-Jan Brone - SettleMint",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/helpers": "^6.3.0",
    "@sendgrid/mail": "^6.3.1",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cron": "^1.6.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "lodash.set": "^4.3.2",
    "mongodb": "^3.1.13",
