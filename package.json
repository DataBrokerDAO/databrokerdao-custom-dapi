  "scripts": {
    "start-debug": "node --trace-warnings --inspect=0.0.0.0:9230 --preserve-symlinks ./dist/server.js",
    "start-debug-break": "node --trace-warnings --inspect-brk=0.0.0.0:9230 --preserve-symlinks ./dist/server.js",
    "build-ts": "tsc --declaration",
    "watch": "tsc -w --declaration",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "pretest": "npm run tslint",
    "build": "npm run build-ts && npm run uglifyjs",
    "build:internal": "npm run build-ts",
    "test": "jest --forceExit --runInBand --detectOpenHandles --coverage --verbose || exit 0",
    "semantic-release": "semantic-release",
    "uglifyjs": "uglifyjs-folder ./dist -yeo ./dist -x .js",
    "start": "node ./dist/server.js",
    "dev": "ts-node-dev src/server.ts",
    "travis-deploy-once": "travis-deploy-once --pro",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/cron": "^1.6.1",
