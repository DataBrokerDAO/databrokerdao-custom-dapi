{
  "name": "@settlemint/lib-mongo",
  "version": "3.2.4",
  "description": "Mint mongo methods",
  "engines": {
    "node": ">=8.7.0"
  },
  "main": "src/component.js",
  "scripts": {
    "lint": "eslint src test",
    "pretest": "npm run lint",
    "test": "jest --coverage --collectCoverageFrom='src/**/*.{js,jsx}'",
    "docs": "NODE_ENV=production documentation readme src/component.js --section=API",
    "watch": "nodemon --watch src",
    "semantic-release": "semantic-release"
  },
  "repository": "https://github.com/settlemint/lib-mongo",
  "keywords": [
    "settlemint",
    "mint",
    "mongo"
  ],
  "LICENCE": "SEE LICENSE IN LICENSE",
  "author": "SettleMint",
  "bugs": {
    "url": "https://github.com/settlemint/lib-mongo/issues"
  },
  "files": [
    "src",
    "dist"
  ],
  "homepage": "https://github.com/settlemint/lib-mongo",
  "dependencies": {
    "mongorito": "^3.0.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js?(x)",
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "plugin:node/recommended",
      "plugin:promise/recommended"
    ],
    "plugins": [
      "prettier",
      "node",
      "promise"
    ],
    "rules": {
      "prettier/prettier": "warn",
      "node/exports-style": [
        "error",
        "module.exports"
      ]
    },
    "env": {
      "jest": true
    }
  },
  "publishConfig": {
    "access": "restricted"
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "documentation": "^5.4.0",
    "eslint": "^4.17.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "jest-cli": "^22.2.2",
    "lint-staged": "^6.1.0",
    "nodemon": "^1.14.12",
    "prettier": "^1.10.2",
    "semantic-release": "^11.0.2"
  }
}
